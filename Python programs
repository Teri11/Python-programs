# List of menu
menu_instruction =" Our menu for today includes:"
print(menu_instruction)
 
# Displaying a simple menu
print("1.Expresso")
print("2.Latte")
print("3.Cappuccino")
print("4.Americano")
 
# Taking the order
order = input("Please enter the number of your choice: ")
 
# Using if-elif-else statements to respond to the order
 
if order == "1":
    print("You have ordered Expresso.That will be $3.50.")
    
elif order == "2":
    print("You have ordered Latte. That will be $4.00")
 
elif order == "3":
    print("You have ordered Cappuccino. That will be $4.50")
 
elif order == "4":
    print("You have ordered Americano. That will be $5.00")
 
else:
    print("Sorry, we do not have that on our menu.")
    
# another order
another_order =input("Would you like to make another order?(yes/no):")
if another_order.lower() == "yes":
      print("Sure! Let's start over.")



# Grading system for class
grade =54

if grade >= 90:
    print("A")
elif grade >= 80:
    print("B")
elif grade >= 75:
    print("B")
elif grade >= 70:
    print("D")
elif grade >= 55:
    print("FAIL!")
else:
    print("Enroll for supplimentary")
      

